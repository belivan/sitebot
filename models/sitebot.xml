<mujoco model="sitebot">
  <compiler angle="radian" coordinate="local"/>

  <option timestep="0.002" gravity="0 0 -9.81" integrator="implicit"/>

  <default>
    <joint armature="0.01" damping="0.1"/>
    <geom condim="3" friction="1.0 0.005 0.0001"/>
    <motor ctrllimited="true" ctrlrange="-10 10"/>
  </default>

  <asset>
    <texture type="skybox" builtin="gradient" rgb1="0.4 0.6 0.8" rgb2="0.1 0.1 0.2" width="512" height="512"/>
    <texture name="groundtex" type="2d" builtin="checker" rgb1="0.5 0.5 0.5" rgb2="0.6 0.6 0.6" width="512" height="512"/>
    <material name="groundmat" texture="groundtex" texrepeat="10 10"/>
    <material name="chassis_mat" rgba="0.9 0.5 0.1 1"/>
    <material name="wheel_mat" rgba="0.2 0.2 0.2 1"/>
    <material name="sensor_mat" rgba="0.1 0.1 0.8 1"/>
  </asset>

  <worldbody>
    <!-- Ground plane -->
    <geom name="ground" type="plane" size="50 50 0.1" material="groundmat"/>
    <light name="sun" pos="0 0 10" dir="0 0 -1" diffuse="1 1 1"/>

    <!-- SiteBot: Differential Drive Robot -->
    <body name="chassis" pos="0 0 0.15">
      <freejoint name="root"/>
      <inertial pos="0 0 0" mass="50" diaginertia="2 2 1"/>

      <!-- Main chassis body -->
      <geom name="chassis_box" type="box" size="0.4 0.25 0.1" material="chassis_mat"/>

      <!-- Sensor mast -->
      <geom name="mast" type="cylinder" pos="0 0 0.25" size="0.03 0.15" material="sensor_mat"/>
      <geom name="sensor_head" type="sphere" pos="0 0 0.42" size="0.06" material="sensor_mat"/>

      <!-- Lidar mount sites for rangefinder sensors (360 degree coverage) -->
      <site name="lidar_0" pos="0 0 0.45" euler="0 1.5708 0" size="0.01"/>
      <site name="lidar_45" pos="0 0 0.45" euler="0 1.5708 0.7854" size="0.01"/>
      <site name="lidar_90" pos="0 0 0.45" euler="0 1.5708 1.5708" size="0.01"/>
      <site name="lidar_135" pos="0 0 0.45" euler="0 1.5708 2.3562" size="0.01"/>
      <site name="lidar_180" pos="0 0 0.45" euler="0 1.5708 3.1416" size="0.01"/>
      <site name="lidar_225" pos="0 0 0.45" euler="0 1.5708 3.927" size="0.01"/>
      <site name="lidar_270" pos="0 0 0.45" euler="0 1.5708 4.7124" size="0.01"/>
      <site name="lidar_315" pos="0 0 0.45" euler="0 1.5708 5.4978" size="0.01"/>

      <!-- Left wheel -->
      <body name="left_wheel" pos="0 0.3 -0.05">
        <joint name="left_wheel_joint" type="hinge" axis="0 1 0" limited="false"/>
        <inertial pos="0 0 0" mass="2" diaginertia="0.02 0.04 0.02"/>
        <geom name="left_wheel_geom" type="cylinder" size="0.1 0.04" euler="1.5708 0 0" material="wheel_mat"/>
      </body>

      <!-- Right wheel -->
      <body name="right_wheel" pos="0 -0.3 -0.05">
        <joint name="right_wheel_joint" type="hinge" axis="0 1 0" limited="false"/>
        <inertial pos="0 0 0" mass="2" diaginertia="0.02 0.04 0.02"/>
        <geom name="right_wheel_geom" type="cylinder" size="0.1 0.04" euler="1.5708 0 0" material="wheel_mat"/>
      </body>

      <!-- Front caster (lowered to touch ground: chassis z=0.15, offset -0.10, radius 0.05 = z=0) -->
      <body name="front_caster" pos="0.35 0 -0.10">
        <inertial pos="0 0 0" mass="0.5" diaginertia="0.001 0.001 0.001"/>
        <geom name="front_caster_geom" type="sphere" size="0.05" friction="0.01 0.001 0.0001" rgba="0.5 0.5 0.5 1"/>
      </body>

      <!-- Rear caster (lowered to touch ground) -->
      <body name="rear_caster" pos="-0.35 0 -0.10">
        <inertial pos="0 0 0" mass="0.5" diaginertia="0.001 0.001 0.001"/>
        <geom name="rear_caster_geom" type="sphere" size="0.05" friction="0.01 0.001 0.0001" rgba="0.5 0.5 0.5 1"/>
      </body>
    </body>
  </worldbody>

  <actuator>
    <!-- Motor actuators with high gear ratio for strong velocity tracking -->
    <!-- gear=500 amplifies torque, ctrlrange allows large control signals -->
    <motor name="left_motor" joint="left_wheel_joint" gear="500" ctrllimited="true" ctrlrange="-1000 1000"/>
    <motor name="right_motor" joint="right_wheel_joint" gear="500" ctrllimited="true" ctrlrange="-1000 1000"/>
  </actuator>

  <sensor>
    <!-- Chassis state sensors -->
    <framepos name="chassis_pos" objtype="body" objname="chassis"/>
    <framequat name="chassis_quat" objtype="body" objname="chassis"/>
    <framelinvel name="chassis_vel" objtype="body" objname="chassis"/>
    <frameangvel name="chassis_angvel" objtype="body" objname="chassis"/>
    <jointvel name="left_wheel_vel" joint="left_wheel_joint"/>
    <jointvel name="right_wheel_vel" joint="right_wheel_joint"/>

    <!-- Lidar rangefinder sensors (8 beams at 45 degree intervals) -->
    <rangefinder name="range_0" site="lidar_0"/>
    <rangefinder name="range_45" site="lidar_45"/>
    <rangefinder name="range_90" site="lidar_90"/>
    <rangefinder name="range_135" site="lidar_135"/>
    <rangefinder name="range_180" site="lidar_180"/>
    <rangefinder name="range_225" site="lidar_225"/>
    <rangefinder name="range_270" site="lidar_270"/>
    <rangefinder name="range_315" site="lidar_315"/>
  </sensor>
</mujoco>
